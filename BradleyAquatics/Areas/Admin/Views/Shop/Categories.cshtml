@model IEnumerable<BradleyAquatics.Models.tblCategory>



@{
    ViewBag.Title = "Categories";
}

<h2>Categories</h2>

<div class="new-cat form-group col-md-4">
    <input type="text" id="newcatname" class="form-control form-control-sm"  />
    <p><br />
        <a class="btn-primary btn" href="#" id="newcata">Add a new category</a> <br /> <br />
        <span class="ajax-text text-center">
               <img src="~/Content/img/ajax-loader.gif" />
        </span>

    </p>

</div>

@if (!Model.Any())
{
    <h1 class="text-center">There are no categories</h1>
}
else
{


    <table class="table sorting categories" id="pages">
        <tr class="home">
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th></th>
        </tr>

    @foreach (var item in Model) {
        <tr id="id_@item.Id">
            <td>
                <div class="ajaxdivtd"></div>
                @Html.EditorFor(modelItem => item.Name, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })
            </td>
            <td>
                Delete(removed link)
                @*@Html.ActionLink("Delete", "DeleteCategory", new { id=item.Id }, new {@class ="delete"})*@
            </td>
        </tr>
    }

    </table>
}

@section Scripts{

<script src="~/Scripts/category.js"></script>
<script src="https://code.jquery.com/ui/1.12.0/jquery-ui.min.js"></script>






}